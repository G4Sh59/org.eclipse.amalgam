<?xml version="1.0"?>
<workflow>
	<property name="model" value="platform:/resource/org.eclipse.amalgam.examples.dsl.mindmap/model/Mindmap.xmi" />
	<property name="out" value="out" />

	<bean class="org.eclipse.emf.mwe.utils.StandaloneSetup">
		<platformUri value="../" />
	</bean>

	<component class="org.eclipse.emf.mwe.utils.Reader">
		<uri value="${model}" />
		<modelSlot value="model" />
		<firstElementOnly value="false" />
	</component>

	<component class="org.eclipse.xpand2.Generator">
		<metaModel id="mm" class="org.eclipse.xtend.typesystem.emf.EmfRegistryMetaModel"/>
		<expand value="mindmap2csv::Main FOR model.typeSelect(mindmap::Map).first()" />
		<outlet path="${out}"/>
	</component>
</workflow>