<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

  <extension
         point="org.eclipse.pde.ui.samples">
      <sample
            name="%sample.mindmap.name"
            perspectiveId="org.eclipse.amalgam.dsl.ui.dslPerspective"
            targetViewId="org.eclipse.jdt.ui.PackageExplorer"
            id="org.eclipse.amalgam.examples.dsl.mindmap">
         <description
               helpHref="/org.eclipse.amalgam.dsltk.doc/html/samples/mindmap.html">
           %sample.mindmap.desc
         </description>
         <activity id="org.eclipse.javaDevelopment"/>
         <activity id="org.eclipse.plugInDevelopment"/>
         <activity id="org.eclipse.amalgam.dsl.domainModelingActivity"/>
         <activity id="org.eclipse.amalgam.dsl.diagramDefinitionActivity"/>
         <activity id="org.eclipse.amalgam.mt.templateDefinitionActivity"/>
         <activity id="org.eclipse.amalgam.m2m.qvto.activity"/>
         <project
               name="org.eclipse.amalgam.examples.dsl.mindmap"
               selectReveal="model/mindmap.ecore_diagram"
               archive="samples/mindmap.zip">
         </project>
      </sample>
   </extension>
   
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="%category.dsltk"
            parentCategory="org.eclipse.ui.Examples"
            id="org.eclipse.amalgam.examples.dsltk">
      </category>
   	  <wizard
            name="%sample.mindmap.name"
            category="org.eclipse.ui.Examples/org.eclipse.amalgam.examples.dsltk"
            class="org.eclipse.amalgam.common.ui.wizards.SampleWizard:org.eclipse.amalgam.examples.dsl.mindmap"
            project="true"
            id="org.eclipse.amalgam.examples.dsl.mindmap">
         <description>%sample.mindmap.desc
         </description>
      </wizard>
    </extension>
</plugin>
